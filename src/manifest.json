{
 "name": "My Minimal Markdown Editor",
 "description": "A Chrome WebApp for writing markdown",
 "version": "1.0",
 "manifest_version": 2,
 "offline_enabled" : true,
 "app": {
  "background": {
    "scripts": [ "background.js" ]
  }
 },
 "permissions": [  {"fileSystem": ["write"]},
    "storage"
 ],
 "file_handlers": {
    "text": {
      "types": [
          "text/*"
      ],
      "title": "Markdown text editor"
    }
 },
  "sandbox": {
    "pages": [ "index.html" ]
  },
  "icons": { "16": "logo-16.png", "32": "logo-32.png", "128": "logo-128.png", "256": "logo-256.png" }
}
